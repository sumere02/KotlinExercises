<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/walpaper"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/timerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/white"
        android:text="@string/timer_100"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:backgroundTint="#2196F3"
        android:onClick="startGame"
        android:text="@string/start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/scoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/score_0"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toEndOf="@+id/timerLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="495dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/startButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerLabel">

        <LinearLayout
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="131dp"
                android:layout_height="165dp"
                android:contentDescription="3"
                android:onClick="addScore"
                app:srcCompat="@drawable/duck" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="131dp"
                android:layout_height="165dp"
                android:contentDescription="2"
                android:onClick="addScore"
                app:srcCompat="@drawable/duck" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="131dp"
                android:layout_height="165dp"
                android:contentDescription="1"
                android:onClick="addScore"
                app:srcCompat="@drawable/duck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="131dp"
                android:layout_height="165dp"
                android:contentDescription="6"
                android:onClick="addScore"
                app:srcCompat="@drawable/duck" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="131dp"
                android:layout_height="165dp"
                android:contentDescription="5"
                android:onClick="addScore"
                app:srcCompat="@drawable/duck" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="131dp"
                android:layout_height="165dp"
                android:contentDescription="4"
                android:onClick="addScore"
                app:srcCompat="@drawable/duck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="131dp"
                android:layout_height="165dp"
                android:contentDescription="7"
                android:onClick="addScore"
                app:srcCompat="@drawable/duck" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="131dp"
                android:layout_height="165dp"
                android:contentDescription="9"
                android:onClick="addScore"
                app:srcCompat="@drawable/duck" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="131dp"
                android:layout_height="165dp"
                android:contentDescription="9"
                android:onClick="addScore"
                app:srcCompat="@drawable/duck" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>