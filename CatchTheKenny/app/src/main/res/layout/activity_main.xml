<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/timeLabelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/time_20"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <TextView
        android:id="@+id/scoreLabelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/score_0"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeLabelView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="123dp"
                android:layout_height="145dp"
                android:onClick="pointScored"
                android:visibility="invisible"
                app:srcCompat="@drawable/rabbit" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="123dp"
                android:layout_height="145dp"
                android:onClick="pointScored"
                android:visibility="invisible"
                app:srcCompat="@drawable/rabbit" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="123dp"
                android:layout_height="145dp"
                android:onClick="pointScored"
                android:visibility="invisible"
                app:srcCompat="@drawable/rabbit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="123dp"
                android:layout_height="145dp"
                android:onClick="pointScored"
                android:visibility="invisible"
                app:srcCompat="@drawable/rabbit" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="123dp"
                android:layout_height="145dp"
                android:onClick="pointScored"
                android:visibility="invisible"
                app:srcCompat="@drawable/rabbit" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="123dp"
                android:layout_height="145dp"
                android:onClick="pointScored"
                android:visibility="invisible"
                app:srcCompat="@drawable/rabbit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="123dp"
                android:layout_height="145dp"
                android:onClick="pointScored"
                android:visibility="invisible"
                app:srcCompat="@drawable/rabbit" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="123dp"
                android:layout_height="145dp"
                android:onClick="pointScored"
                android:visibility="invisible"
                app:srcCompat="@drawable/rabbit" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="123dp"
                android:layout_height="145dp"
                android:onClick="pointScored"
                android:visibility="invisible"
                app:srcCompat="@drawable/rabbit" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/startButtonView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="4dp"
        android:onClick="startGame"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>